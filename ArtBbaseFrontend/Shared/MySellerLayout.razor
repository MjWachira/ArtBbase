@code {
    private int sidebarWidth = 0;
    private int mainContentMargin = 0;

    private void OpenNav()
    {
        sidebarWidth = 180;
        mainContentMargin = 180;

    }

    private void CloseNav()
    {
        sidebarWidth = 0;
        mainContentMargin = 0;
    }
}
